body
  font-size:   18px
  font-family: 'Alegreya', serif
  background:  url(<%= image_url('gplaypattern.png') %>)
  margin:      0
  padding:     0

.container
  width:  960px
  margin: 0 auto

header
  background-color: #3A89C9
  margin-bottom: 50px
  border-bottom: 5px solid #F26C4F
  p
    margin: 0
    padding: 0
    font-size: 45px
    font-weight: bold
    line-height: 80px
    text-align: center

    img
      right: -8px
      position: relative
      top: 8px
    a
      text-decoration: none
      color: white

h1, h2, h3
  text-align: center

h1
  font-size: 280%
h2
  font-size: 200%
h3
  font-size: 120%

.center
  text-align: center

.btn
  cursor: pointer
.btn a
  color: white
  padding: 5px 15px
  background-color: #3A89C9
  text-decoration: none
  display: inline-block
  border-radius: 5px 0
